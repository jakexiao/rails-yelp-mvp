<p>
<strong>Name:</strong>
<%= @restaurant.name %>
</p>

<p>
<strong>Address:</strong>
<%= @restaurant.address %>
</p>

<p>
<strong>Phone number:</strong>
<%= @restaurant.phone_number %>
</p>

<ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item">
            <%= review.content %>
            about <%= time_ago_in_words review.created_at %> ago
        </li>
    <% end %>
</ul>

<div> <%= link_to "Back to list", restaurants_path %> </div>
<div> <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %> </div>
